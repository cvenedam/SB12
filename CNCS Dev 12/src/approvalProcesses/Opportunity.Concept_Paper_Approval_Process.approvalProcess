        <name>Step_1</name>
    </approvalStep>
    <emailTemplate>unfiled$public/Concept_Paper_Approved</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Opportunity.Approval_Status__c</field>
